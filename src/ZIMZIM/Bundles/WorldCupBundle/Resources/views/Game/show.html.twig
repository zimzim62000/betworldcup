{% extends '::base.html.twig' %}


{% block title %}
    {{ 'zimzim_worldcup_game.index.title'|trans }}
{% endblock title %}

{% block page %}
    <div class="row">
        <div class="small-12 large-12 columns">
            <h1 class="text-center title">{{ entity.__toString }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 large-12 columns">
            {% for key,userbet in userbets %}
                <div class="row panel">
                    <div class="small-4 large-4 columns text-center">
                        <h3>{{ userbet.user.username }}</h3>
                    </div>
                    <div class="small-4 large-4 columns text-center">
                        <h4 class="bgcolor">{{ userbet.game.teamA.name }}</h4>
                        <h4 class="primarycolor">{{ userbet.scoreTeamA }}</h4>
                    </div>
                    <div class="small-4 large-4 columns text-center">
                        <h4 class="bgcolor">{{ userbet.game.teamB.name }}</h4>
                        <h4 class="primarycolor">{{ userbet.scoreTeamB }}</h4>
                    </div>
                </div>
                <hr>
            {% endfor %}

            {% if userbets|length == 0 %}
                <div class="row panel">
                    <div class="small-12 large-12 columns text-center alert-box warning">
                        Pas encore de pari pour ce match
                    </div>
                </div>
            {% endif %}

            <div class="row">
                <div class="small-12 large-4 columns text-center">
                    <a class="tiny button" href="{{ path('zimzim_worldcup_game') }}">
                        {{ 'link.return'|trans }}
                    </a>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="small-12 large-4 columns text-center">
                        <a class="tiny button" href="{{ path('zimzim_worldcup_game_edit', { 'id': entity.id }) }}">
                            {{ 'button.update'|trans }}
                        </a>
                    </div>
                    <div class="small-12 large-4 columns text-center">
                        {{ form(delete_form) }}
                    </div>
                {% else %}
                    <div class="small-12 large-8 columns text-center">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
