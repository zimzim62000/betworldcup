<div class="row score panel">
    <div class="small-2 medium-2 columns text-left">
        <h6 class="whitecolor score">{{ 'views.worldcup.score.ranking.rank'|trans }}</h6>
    </div>
    <div class="small-6 medium-6 columns text-center">
        <h6 class="primarycolor username">{{ 'views.worldcup.score.ranking.user'|trans }}</h6>
    </div>
    <div class="small-4 columns show-for-small text-center">
        <h6 class="whitecolor score">
            {{ 'views.worldcup.score.ranking.score'|trans }}
            ({{ 'views.worldcup.score.ranking.nbmaxscore'|trans }})
        </h6>
    </div>
    <div class="medium-2 columns hide-for-small text-center">
        <h6 class="whitecolor score">{{ 'views.worldcup.score.ranking.score'|trans }}</h6>
    </div>
    <div class="medium-2 columns hide-for-small text-center">
        <h6 class="primarycolor score">
            {{ 'views.worldcup.score.ranking.nbmaxscore'|trans }}
        </h6>
    </div>
</div>
